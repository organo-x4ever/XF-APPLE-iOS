                                <FormattedString>
                                    <Span Text="&#x2022;" ForegroundColor="{x:Static statics:Palette._MainAccent}" FontSize="Large" FontAttributes="Bold" />
                                    <Span Text=" " />
                                    <Span Text="{localization:Translate page_tshirts_bundle_100lb_option}" ForegroundColor="{x:Static statics:Palette._TitleTexts}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </StackLayout>
                    <StackLayout HorizontalOptions="FillAndExpand" Margin="0,20,0,20">
                        <BoxView HorizontalOptions="Center" HeightRequest="1.5" BackgroundColor="{x:Static statics:Palette._TitleTexts}" WidthRequest="150"></BoxView>
                    </StackLayout>
                    <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" Margin="0">
                        <Label HorizontalOptions="Center" HorizontalTextAlignment="Center" Style="{DynamicResource labelStyleInfoHighlightSmall}" TextColor="{x:Static statics:Palette._TitleTexts}">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{localization:Translate page_rewards_each_quarter_text_highlight}" ForegroundColor="{x:Static statics:Palette._MainAccent}" FontSize="Medium" />
                                    <Span Text=" " />
                                    <Span Text="{localization:Translate page_rewards_each_quarter_text}" ForegroundColor="{x:Static statics:Palette._TitleTexts}" />
                                </FormattedString>
                            </Label.FormattedText>
