                    <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand" Margin="0">
                        <Label HorizontalOptions="Center" HorizontalTextAlignment="Center" Style="{DynamicResource labelStyleInfoHighlightSmall}" TextColor="{x:Static statics:Palette._TitleTexts}">
                            <Label.FormattedText>
                                <FormattedString>
