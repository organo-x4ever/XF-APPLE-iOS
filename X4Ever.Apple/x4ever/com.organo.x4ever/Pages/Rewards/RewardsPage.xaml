                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </StackLayout>
                    <StackLayout HorizontalOptions="FillAndExpand" Margin="0,20,0,20">
                        <BoxView HorizontalOptions="Center" HeightRequest="1.5" BackgroundColor="{x:Static statics:Palette._TitleTexts}" WidthRequest="150"></BoxView>
