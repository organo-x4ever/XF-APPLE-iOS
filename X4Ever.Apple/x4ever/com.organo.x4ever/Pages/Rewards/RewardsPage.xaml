                        <Label Text="{localization:Translate page_tshirts_bundle_text}" Style="{DynamicResource labelStyleInfoHighlightSmall}" TextColor="{x:Static statics:Palette._TitleTexts}" HorizontalOptions="Center" HorizontalTextAlignment="Center" />
                    </StackLayout>
                    <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand" Margin="0">
                        <Label HorizontalOptions="Center" HorizontalTextAlignment="Center" Style="{DynamicResource labelStyleInfoHighlightSmall}" TextColor="{x:Static statics:Palette._TitleTexts}">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="&#x2022;" ForegroundColor="{x:Static statics:Palette._MainAccent}" FontSize="Large" FontAttributes="Bold" />
                                    <Span Text=" " />
                                    <Span Text="{localization:Translate page_tshirts_bundle_25lb_option}" ForegroundColor="{x:Static statics:Palette._TitleTexts}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label HorizontalOptions="Center" HorizontalTextAlignment="Center" Style="{DynamicResource labelStyleInfoHighlightSmall}" TextColor="{x:Static statics:Palette._TitleTexts}">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="&#x2022;" ForegroundColor="{x:Static statics:Palette._MainAccent}" FontSize="Large" FontAttributes="Bold" />
                                    <Span Text=" " />
