<?xml version="1.0" encoding="utf-8" ?>
<news1:NewsPageXaml xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:news1="clr-namespace:com.organo.x4ever.Pages.News;assembly=com.organo.x4ever"
             xmlns:statics="clr-namespace:com.organo.x4ever.Statics;assembly=com.organo.x4ever"
             xmlns:localization="clr-namespace:com.organo.x4ever.Localization;assembly=com.organo.x4ever"
             xmlns:controls="clr-namespace:com.organo.x4ever.Controls;assembly=com.organo.x4ever"
             x:Class="com.organo.x4ever.Pages.News.NewsPage"
             BackgroundColor="{x:Static statics:Palette._MainBackground}">
  <news1:NewsPageXaml.Content>
    <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
      <controls:TopBarAccountView/>
      <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BackgroundColor="{x:Static statics:Palette._MainBackground}">
        <ScrollView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="0" Margin="0,-6,0,0">
            <controls:GridNews x:Name="GridNews" BackgroundColor="{x:Static statics:Palette._Transparent}" Margin="15,15,15,0" />
        </ScrollView>
      </StackLayout>
    </StackLayout>
  </news1:NewsPageXaml.Content>
</news1:NewsPageXaml>